<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_add_feed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feed_title" />

    <EditText
        android:id="@+id/add_feed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:inputType="text">
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_add_feed_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feed_url" />

    <EditText
        android:id="@+id/add_feed_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri" />
    
    <Button
        android:id="@+id/btnAddFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/add_feet_buton" />

</LinearLayout>